<%= render "nova.conf.erb", cookbook: 'openstack-compute'%>
##### z/VM #####
[DEFAULT]
# The xCAT MN IP address or host name.
zvm_xcat_server=<%= node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["zvm_xcat_server"] %>

# The xCAT master node (the node name in xCAT definition).
zvm_xcat_master=<%= node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["zvm_xcat_master"] %>

# The xCAT REST API username.
zvm_xcat_username=admin

# The xCAT REST API password.
zvm_xcat_password=<%= node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["zvm_xcat_password"] %>

# The disk pool name that xCAT will allocate disk from for new servers.
# Note: The zvm_diskpool name is the name of the storage 'group' defined in the Directory Manager.
zvm_diskpool=<%= node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["zvm_diskpool"] %>

# The disk pool type (can be FBA or ECKD ).
zvm_diskpool_type=<%= node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["zvm_diskpool_type"] %>

# The xCAT node name of the z/VM hypervisor.
zvm_host=<%= node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["zvm_host"] %>

# The host is used to distinguish different nova compute host, it can be same with zvm_host.
host=<%= node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["host"] %>

# Default template of user directory for new servers.
# User should not use lnxdflt but should define his own profile.
zvm_user_profile=<%= node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["zvm_user_profile"] %>

# The default root password for z/VM instance.
zvm_image_default_password=<%= node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["zvm_image_default_password"] %>
# Timeout value for spawn in seconds, if new spawn machine can't be reachable
# after this value, deploy will report error 'Failed to power on instance'.
#zvm_reachable_timeout=<%= node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["zvm_reachable_timeout"] %>
zvm_reachable_timeout=300


# The name of xCAT SCSI pool. Users can specify any name as their wish. xCAT will
# create and manage it.
<% if node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["zvm_scsi_pool"] %>
zvm_scsi_pool=<%= node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["zvm_scsi_pool"] %>
<% end %>


# The list of FCPs used by instances. Each instance needs one FCP in order to attach a
# volume to itself. Those FCPs should be well planned and made online before
# OpenStack can use them. OpenStack will not check their status but use them directly.
# So if they are not ready, errors may be returned. The format of this variable should look
# like 'min1-max1;min2-max2;min3-max3'. Please contact your z/VM system manager
# if you don't know what FCPs you can use.
<% if node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["zvm_fcp_list"] %>
zvm_fcp_list=<%= node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["zvm_fcp_list"] %>
<% end %>


# The list of FCPs used only by xCAT HCP node. It must be different to zvm_fcp_list.
# Any FCP exist in both zvm_fcp_list and zvm_zhcp_fcp_list leads to errors. The format
# of this variable should look like 'min1-max1;min2-max2;min3-max3'. Strongly
# recommend to specify only one FCP for HCP to avoid resource waste. Please contact
# your z/VM system manager if you don't know what FCPs you can use.
<% if node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["zvm_zhcp_fcp_list"] %>
zvm_zhcp_fcp_list=<%= node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["zvm_zhcp_fcp_list"] %>
<% end %>

# For live migration. Choose one of 'ARCHITECTURE', 'DOMAIN' or 'STORAGE'.
<% if node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["zvm_vmrelocate_force"] %>
zvm_vmrelocate_force=<%= node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["zvm_vmrelocate_force"] %>
<% end %>

my_ip=<%= node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["my_ip"] %>


default_publisher_id=<%= node["ibm-openstack"]["zvm-appliance"]["unchangeable-confs"]["nova-conf"]["default"]["default_publisher_id"] %>
